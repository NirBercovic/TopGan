<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ChildDetailsScreen.ui.childdetails.tabs.ChildDetailsContactFragment">


    <TextView
        android:id="@+id/tv_cd_parent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/child_details_vertical_margin"
        android:textSize="@dimen/details_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_cd_parent1label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הורה 1"
        app:layout_constraintBottom_toTopOf="@+id/tv_cd_parent1"
        app:layout_constraintStart_toStartOf="@+id/tv_cd_parent1"/>

    <TextView
        android:id="@+id/tv_cd_parentPhone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/details_text_size"
        app:layout_constraintTop_toTopOf="@+id/tv_cd_parent1"
        app:layout_constraintStart_toEndOf="@+id/tv_cd_parent1"/>

    <TextView
        android:id="@+id/tv_cd_parent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/child_details_vertical_margin"
        android:textSize="@dimen/details_text_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_cd_parent1"
        app:layout_constraintStart_toStartOf="@+id/tv_cd_parent1"/>

    <TextView
        android:id="@+id/tv_cd_parent2label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הורה 2"
        app:layout_constraintBottom_toTopOf="@+id/tv_cd_parent2"
        app:layout_constraintStart_toStartOf="@+id/tv_cd_parent2"/>
    
    <TextView
        android:id="@+id/tv_cd_parentPhone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/details_text_size"
        app:layout_constraintTop_toTopOf="@+id/tv_cd_parent2"
        app:layout_constraintStart_toEndOf="@+id/tv_cd_parent2"/>

    <TextView
        android:id="@+id/tv_cd_contact1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/child_details_vertical_margin"
        android:textSize="@dimen/details_text_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_cd_parent2"
        app:layout_constraintStart_toStartOf="@+id/tv_cd_parent2" />

    <TextView
        android:id="@+id/tv_cd_contact1label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="איש קשר 1"
        app:layout_constraintBottom_toTopOf="@+id/tv_cd_contact1"
        app:layout_constraintStart_toStartOf="@+id/tv_cd_contact1"/>

    <TextView
        android:id="@+id/tv_cd_relation1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/details_text_size"
        app:layout_constraintTop_toTopOf="@+id/tv_cd_contact1"
        app:layout_constraintStart_toEndOf="@+id/tv_cd_contact1"/>

    <TextView
        android:id="@+id/tv_cd_contactPhone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/details_text_size"
        app:layout_constraintTop_toTopOf="@+id/tv_cd_relation1"
        app:layout_constraintStart_toEndOf="@+id/tv_cd_relation1"/>


    <TextView
        android:id="@+id/tv_cd_contact2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/child_details_vertical_margin"
        android:textSize="@dimen/details_text_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_cd_contact1"
        app:layout_constraintStart_toStartOf="@+id/tv_cd_contact1"/>

    <TextView
        android:id="@+id/tv_cd_contact2label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="איש קשר 2"
        app:layout_constraintBottom_toTopOf="@+id/tv_cd_contact2"
        app:layout_constraintStart_toStartOf="@+id/tv_cd_contact2"/>

    <TextView
        android:id="@+id/tv_cd_relation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/details_text_size"
        app:layout_constraintTop_toTopOf="@+id/tv_cd_contact2"
        app:layout_constraintStart_toEndOf="@+id/tv_cd_contact2"/>

    <TextView
        android:id="@+id/tv_cd_contactPhone2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="@dimen/details_text_size"
        app:layout_constraintTop_toTopOf="@+id/tv_cd_relation2"
        app:layout_constraintStart_toEndOf="@+id/tv_cd_relation2"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/edit_fab_icon"
        android:layout_marginRight="@dimen/edit_fab_icon"
        android:layout_marginBottom="@dimen/edit_fab_icon"
        android:src="@drawable/fab_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    

</android.support.constraint.ConstraintLayout>