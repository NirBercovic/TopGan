<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primaryColor"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/outline_event_note_white_18dp_large"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="הודעות"
            android:textSize="10sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/outline_notifications_white_18dp_large"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="לוח שנה"
            android:textSize="10sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/outline_insert_photo_white_18dp_large"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="גלריה"
            android:textSize="10sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:drawableTop="@drawable/outline_more_vert_white_18dp_large"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="עוד"
            android:textSize="10sp" />


    </LinearLayout>

</LinearLayout>