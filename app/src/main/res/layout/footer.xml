<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageButton
            android:src="@drawable/outline_date_range_black_18dp_large"
            android:scaleType="fitCenter"
            android:background="#fafafa"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:src="@drawable/outline_insert_photo_black_18dp_large"
            android:scaleType="fitCenter"
            android:background="#fafafa" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:src="@drawable/outline_account_circle_black_18dp_large"
            android:scaleType="fitCenter"
            android:background="#fafafa" />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:src="@drawable/outline_notifications_black_18dp_large"
            android:scaleType="fitCenter"
            android:background="#fafafa" />
    </LinearLayout>

</LinearLayout>