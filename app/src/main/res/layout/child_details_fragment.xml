<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/childdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChildDetailsScreen.ui.childdetails.ChildDetailsFragment">

    <ImageView
        android:id="@+id/iv_cd_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cd_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Roi Greenberg"
        app:layout_constraintEnd_toEndOf="@+id/iv_cd_image"
        app:layout_constraintStart_toStartOf="@+id/iv_cd_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_cd_image" />

    <TextView
        android:id="@+id/tv_cd_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="רועי"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cd_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="גרינברג"
        app:layout_constraintStart_toStartOf="@+id/tv_cd_first_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_cd_first_name" />

    <TextView
        android:id="@+id/tv_cd_birth_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="01/01/2000"
        app:layout_constraintStart_toStartOf="@+id/tv_cd_last_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_cd_last_name" />

    <TextView
        android:id="@+id/tv_cd_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="זכר"
        app:layout_constraintStart_toStartOf="@+id/tv_cd_birth_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_cd_birth_date" />
</android.support.constraint.ConstraintLayout>
